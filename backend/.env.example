# Application Settings
APP_NAME=CallGuard AI
APP_VERSION=1.0.0
DEBUG=true
ENV=development

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/callguard
REDIS_URL=redis://localhost:6379/0

# JWT Authentication
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI/ML Models
WHISPER_MODEL=base
SPACY_MODEL=en_core_web_sm
FRAUD_MODEL_PATH=./models/fraud_classifier.joblib

# Audio Settings
MAX_AUDIO_DURATION_SECONDS=600
SUPPORTED_AUDIO_FORMATS=wav,mp3,ogg,flac,m4a
SAMPLE_RATE=16000

# Detection Thresholds
SPAM_THRESHOLD=0.6
FRAUD_THRESHOLD=0.7
PHISHING_THRESHOLD=0.65
ROBOCALL_THRESHOLD=0.75

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
